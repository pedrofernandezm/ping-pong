<h1 class='page-header'>History</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Opponent</th>
      <th>Score</th>
      <th>Result</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr class="<%= result_row_style_class(game) %>">
        <td><%= game.date_played %></td>
        <td><%= game.opponent.username %></td>
        <td><%= game.score %></td>
        <td><%= game.result %></td>
      </tr>
    <% end %>
  </tbody>
</table>
