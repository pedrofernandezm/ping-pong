<h1 class='page-header'>Log Game</h1>

<%= form_for @game, html: {class: ""} do |form| %>
  <div class="form-group">
    <%= form.label :date_played, class: "control-label" %>
    <div class="form-inline">
      <%= form.date_select :date_played, {order: [:month, :day, :year]}, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :opponent, class: "control-label" %>
    <%= form.select :opponent_id, options_from_collection_for_select(@opponents, :id, :username), {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :user_score, "Your score", class: "control-label" %>
    <%= form.text_field :user_score, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :opponent_score, "Their score", class: "control-label" %>
    <%= form.text_field :opponent_score, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit "Save" %>
    <%= link_to "cancel", :back %>
  </div>
<% end %>
