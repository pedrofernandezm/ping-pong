<h1 class='page-header'>Leaderboard</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Score</th>
      <th>Games played</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr class="<%= current_user_leaderboard_row_class(user) %>">
        <td><%= index + 1 %></td>
        <td><%= user.username %></td>
        <td><%= user.rating %></td>
        <td><%= user.games_played %></td>
      </tr>
    <% end %>
  </tbody>
</table>
